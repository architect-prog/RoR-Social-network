Firstname: <%= @user.firstname %><br>
Lastname: <%= @user.lastname %><br>
Email: <%= @user.email %><br>

<h5><%= @user.firstname %> have <%= @user.followers.count %> followers</h5>

<h2>Posts</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', user_post_path(@user.id, post.id) %></td>
        <%if current_user.id == @user.id %>
          <td><%= link_to 'Edit', edit_user_post_path(@user.id, post.id) %></td>
          <td><%= link_to 'Destroy', user_post_path(@user.id, post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if current_user.id == @user.id %>
    <%= link_to 'New Post', new_post_path %><br>
<% end %>

<% if current_user.following?(@user) %>
    <%= link_to 'Unfolow', relationship_path(user_id: @user.id), method: :delete %><br>
<% else %>
    <%= link_to 'Follow', relationships_path(user_id: @user.id), method: :post %><br>
<% end %>

<%= link_to 'Back', users_path %>