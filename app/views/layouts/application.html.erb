<!DOCTYPE html>
<html>
  <head>
    <title>SocNetwork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Posts', user_posts_path(current_user.id) %><br>
      <%= link_to 'Users', users_path %><br>
      <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %><br>    
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'Registration', new_user_registration_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
