<% if user_signed_in? %>
  <%= link_to 'Posts', user_posts_path(current_user.id) %><br>
  <%= link_to 'Users', users_path %><br>
  <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %><br>   

  <span>Welcome, <%= current_user.firstname %></span><br><br>
  
  <% current_user.following.each do |followed| %>
      <%= followed.firstname %> 
      <%= followed.lastname %>   
      <%= link_to 'Show', user_path(followed) %>
     
      <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% followed.posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', user_post_path(followed.id, post.id) %></td>              
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
  

<% else %>
  <%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'Registration', new_user_registration_path %>
<% end %>